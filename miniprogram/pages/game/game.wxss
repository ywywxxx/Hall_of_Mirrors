.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF9E6 0%, #E8F5E9 30%, #F3E5F5 60%, #E3F2FD 100%);
  color: #5A5A5A;
  padding: 30px 20px;
  padding-bottom: 100px; /* 为底部按钮留出空间 */
  /* 手写风格字体 - 使用楷体等手写字体 */
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
  position: relative;
}

/* 右上角积分显示 */
.mirror-coins-display {
  position: fixed;
  top: 20px;
  right: 20px;
  display: flex;
  align-items: center;
  gap: 8px;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 8px 16px;
  border-radius: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  z-index: 1000;
  border: 2px solid #FFD93D;
}

.mirror-coin-icon {
  font-size: 24px;
  line-height: 1;
}

.mirror-coins-count {
  font-size: 18px;
  font-weight: 700;
  color: #CE93D8;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.header {
  margin-bottom: 30px;
  text-align: center;
}

/* 底部返回按钮 */
.bottom-actions {
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 1000;
  padding: 0 20px;
}

.back-button-bottom {
  background-color: #FFF9E6;
  color: #CE93D8;
  border: 2px solid #FFD93D;
  padding: 12px 30px;
  border-radius: 25px;
  font-size: 16px;
  font-weight: 700;
  box-shadow: 0 4px 8px rgba(255, 217, 61, 0.3);
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
  min-width: 120px;
}

.back-button-bottom:active {
  background-color: #FFE5B4;
  transform: translateY(2px);
  box-shadow: 0 2px 4px rgba(255, 217, 61, 0.3);
}

.title {
  display: block;
  color: #CE93D8;
  font-size: 28px;
  font-weight: 700;
  text-shadow: 2px 2px 4px rgba(206, 147, 216, 0.3);
  margin-bottom: 8px;
  white-space: nowrap;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.subtitle {
  display: block;
  color: #81C784;
  font-size: 18px;
  font-weight: 400;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.game-card {
  border: 2px solid #FFD93D;
  padding: 24px;
  margin: 10px;
  border-radius: 20px;
  background: linear-gradient(135deg, #FFF9E6 0%, #FFE5F1 50%, #FFD9E8 100%);
  box-shadow: 0 8px 16px rgba(255, 217, 61, 0.25);
  width: fit-content;
  margin: 0 auto;
}

.card-header {
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.level-title {
  color: #CE93D8;
  font-size: 22px;
  font-weight: 700;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.solved-text {
  color: #81C784;
  font-size: 18px;
  font-weight: 700;
}

.game-grid-container {
  display: inline-block;
  position: relative;
}

.clue-row {
  display: flex;
  justify-content: center;
  margin-bottom: 6px;
}

.clue-row.bottom-clues {
  margin-top: 6px;
  margin-bottom: 0;
}

.grid-row {
  display: flex;
  align-items: center;
}

.clue-column {
  display: flex;
  flex-direction: column;
  margin-right: 6px;
}

.clue-column.right-clues {
  margin-left: 6px;
  margin-right: 0;
}

.clue-spacer {
  width: 35px;
  height: 50px;
}

.clue-cell {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  cursor: pointer;
  border-radius: 8px;
  transition: background-color 0.2s;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.01); /* 确保有背景，可以接收点击 */
}

.clue-cell:active {
  background-color: rgba(206, 147, 216, 0.2);
}

.clue-selected {
  background-color: rgba(206, 147, 216, 0.3);
  border: 2px solid #CE93D8;
}

.clue-column .clue-cell {
  width: 35px;
}

.clue-value {
  font-size: 17px;
  font-weight: 700;
  color: #CE93D8;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
  pointer-events: none;
}

.clue-wrong {
  position: absolute;
  font-size: 14px;
  font-weight: 700;
  color: #FF0000;
  pointer-events: none;
}

.top-clue .clue-wrong {
  top: -20px;
  left: 50%;
  transform: translateX(-50%);
}

.bottom-clue .clue-wrong {
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
}

.left-clue .clue-wrong {
  left: -9px;
}

.right-clue .clue-wrong {
  right: -9px;
}

.grid-wrapper {
  position: relative;
}

.path-canvas {
  position: absolute;
  top: 0;
  left: 0;
  pointer-events: none;
  z-index: 3;
  width: 100%;
  height: 100%;
}

.grid {
  position: relative;
  display: grid;
  border: 3px solid #81C784;
  background-color: #E8F5E9;
  border-radius: 8px;
  padding: 2px;
  z-index: 1;
}

.cell {
  width: 50px;
  height: 50px;
  border: 1px solid #E1BEE7;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  border-radius: 4px;
  position: relative;
  overflow: visible;
  z-index: 1;
}

.cell:active {
  background-color: #F5F5F5;
}

.mirror {
  width: 35px;
  height: 4px;
  background-color: #8B4513;
  border-radius: 2px;
  box-shadow: 0 0 3px #8B4513;
  z-index: 10;
}

.user-mirror {
  z-index: 10;
}

.answer-mirror {
  z-index: 15;
}

.no-mirror-mark {
  font-size: 36px;
  color: #666666;
  font-weight: bold;
  user-select: none;
  pointer-events: none;
  position: absolute;
  z-index: 20;
  line-height: 1;
}

.button-group {
  margin-top: 24px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.action-button {
  background-color: #B3D9FF;
  color: #FFFFFF;
  border: none;
  padding: 10px 20px;
  border-radius: 12px;
  font-size: 15px;
  font-weight: 700;
  box-shadow: 0 2px 4px rgba(179, 217, 255, 0.4);
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.action-button.active {
  background-color: #FF9800;
}

.action-button:active {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(179, 217, 255, 0.5);
}

/* 光线开关 */
.light-switch-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  margin-top: 16px;
  padding: 12px;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 12px;
}

.light-switch-label {
  font-size: 15px;
  color: #5A5A5A;
  font-weight: 600;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.light-switch {
  transform: scale(1.2);
}

.tip-text {
  font-size: 12px;
  color: #5A5A5A;
  text-align: center;
  margin-top: 8px;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.solved-message {
  background-color: #81C784;
  color: #FFFFFF;
  padding: 12px;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: 700;
  margin-top: 12px;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}
