.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF9E6 0%, #E8F5E9 30%, #F3E5F5 60%, #E3F2FD 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.login-card {
  background: linear-gradient(135deg, #FFF9E6 0%, #FFE5F1 50%, #FFD9E8 100%);
  border: 2px solid #FFD93D;
  border-radius: 24px;
  padding: 60px 40px;
  box-shadow: 0 8px 24px rgba(255, 217, 61, 0.3);
  text-align: center;
  max-width: 400px;
  width: 100%;
}

.logo {
  margin-bottom: 40px;
}

.logo-icon {
  font-size: 80px;
  display: block;
  margin-bottom: 16px;
}

.logo-title {
  font-size: 36px;
  font-weight: 700;
  color: #CE93D8;
  display: block;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.welcome-text {
  margin-bottom: 50px;
}

.welcome-title {
  font-size: 28px;
  font-weight: 700;
  color: #5A5A5A;
  display: block;
  margin-bottom: 12px;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.welcome-desc {
  font-size: 18px;
  color: #81C784;
  display: block;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.login-button {
  background-color: #B3D9FF;
  color: #FFFFFF;
  border: none;
  padding: 16px 40px;
  border-radius: 25px;
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 20px;
  box-shadow: 0 4px 8px rgba(179, 217, 255, 0.4);
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
  width: 100%;
}

.login-button:active {
  background-color: #90CAF9;
  transform: translateY(2px);
  box-shadow: 0 2px 4px rgba(179, 217, 255, 0.4);
}

.skip-button {
  color: #81C784;
  font-size: 16px;
  padding: 12px;
  cursor: pointer;
  font-family: 'STKaiti', 'KaiTi', 'STSong', 'SimSun', serif;
}

.skip-button:active {
  opacity: 0.7;
}
